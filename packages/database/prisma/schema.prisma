generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Artist {
  id        Int           @id @unique @default(autoincrement())
  name      String
  slug      String        @unique
  bio       String?
  imageUrl  String?
  country   String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  Album     Album[]
  tracks    TrackArtist[]
}

model Track {
  id          Int           @id @default(autoincrement())
  isVerified  String?
  merkleLeaf  String?
  title       String
  slug        String?       @unique
  duration    Int?
  trackNumber Int?
  diskNumber  Int?          @default(1)
  bpm         Float?
  musicalKey  String?
  isExplicit  Boolean       @default(false)
  releaseDate DateTime?
  description String?
  lyrics      String?
  audioUrl    String?
  artworkUrl  String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  authorId    Int
  albumId     Int?
  Album       Album?        @relation(fields: [albumId], references: [id])
  User        User          @relation(fields: [authorId], references: [id])
  artists     TrackArtist[]
  Genre       Genre[]       @relation("TrackGenre")
}

model TrackArtist {
  trackId  Int
  artistId Int
  role     ArtistRole? @default(MAIN)
  artist   Artist      @relation(fields: [artistId], references: [id], onDelete: Cascade)
  track    Track       @relation(fields: [trackId], references: [id], onDelete: Cascade)

  @@id([trackId, artistId])
}

model Album {
  id          Int        @id @default(autoincrement())
  title       String
  slug        String?    @unique
  artworkUrl  String?
  releaseDate DateTime?
  type        AlbumType?
  label       String?
  artistId    Int?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime
  Artist      Artist?    @relation(fields: [artistId], references: [id])
  Track       Track[]
}

model Genre {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  slug      String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime
  Track     Track[]  @relation("TrackGenre")
}

model MerkleRoot {
  id   Int    @id
  root String
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  username  String?  @unique
  bio       String?
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime
  Track     Track[]
}

enum AlbumType {
  ALBUM
  SINGLE
  EP
  COMPILATION
}

enum ArtistRole {
  MAIN
  FEATURED
  REMIXER
  PRODUCER
  CO_PRODUCER
  ADDITIONAL_PRIMARY
  VOCALS
  INSTRUMENTAL
  MIXER
  OTHER
}
