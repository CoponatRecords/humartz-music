generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  engineType = "library"
  moduleFormat           = "esm"
  generatedFileExtension = "ts"
  importFileExtension    = "ts"

}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid()) 
  email     String   @unique
  name      String?
  username  String?  @unique
  bio       String?
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  Track     Track[]
  orders    Order[]
}

model Product {
  id          String      @id @default(cuid())
  name        String
  price       Int      
  orders      OrderItem[]
}

model Order {
  id              String      @id @default(cuid())
  userId          String
  user            User        @relation(fields: [userId], references: [id])
  items           OrderItem[]
  totalAmount     Int
  currency        String      @default("usd")
  status          OrderStatus @default(PENDING)
  stripeSessionId String?     @unique 
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model OrderItem {
  id              String  @id @default(cuid())
  orderId         String
  order           Order   @relation(fields: [orderId], references: [id])
  productId       String
  product         Product @relation(fields: [productId], references: [id])
  priceAtPurchase Int 
}

enum OrderStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

// --- MUSIC MODELS ---

model Artist {
  id        Int           @id @unique @default(autoincrement())
  name      String
  slug      String        @unique
  bio       String?
  imageUrl  String?
  country   String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  Album     Album[]
  tracks    TrackArtist[]
}

model Track {
  email       String?       
  folderHash  String?
  id          Int           @id @default(autoincrement())
  isVerified  String   @default("pending")
  title       String
  slug        String?       @unique
  duration    Int?
  trackNumber Int?
  diskNumber  Int?          @default(1)
  bpm         Float?
  musicalKey  String?
  isExplicit  Boolean       @default(false)
  releaseDate DateTime?
  description String?
  lyrics      String?
  audioUrl    String?
  artworkUrl  String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  promoCode   String?       // Added promoCode field
  txHash      String?       // Added txHash field
  authorId    String        
  User        User          @relation(fields: [authorId], references: [id])
  
  albumId     Int?
  Album       Album?        @relation(fields: [albumId], references: [id])
  
  artists     TrackArtist[]
  Genre       Genre[]       @relation("TrackGenre")
}

model TrackArtist {
  trackId  Int
  artistId Int
  role     ArtistRole? @default(MAIN)
  artist   Artist      @relation(fields: [artistId], references: [id], onDelete: Cascade)
  track    Track       @relation(fields: [trackId], references: [id], onDelete: Cascade)

  @@id([trackId, artistId])
}

model Album {
  id          Int        @id @default(autoincrement())
  title       String
  slug        String?    @unique
  artworkUrl  String?
  releaseDate DateTime?
  type        AlbumType?
  label       String?
  artistId    Int?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt // Added @updatedAt
  Artist      Artist?    @relation(fields: [artistId], references: [id])
  Track       Track[]
}

model Genre {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  slug      String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt // Added @updatedAt
  Track     Track[]  @relation("TrackGenre")
}

model MerkleRoot {
  id   Int    @id @default(autoincrement())
  root String
}

enum AlbumType {
  ALBUM
  SINGLE
  EP
  COMPILATION
}

enum ArtistRole {
  MAIN
  FEATURED
  REMIXER
  PRODUCER
  CO_PRODUCER
  ADDITIONAL_PRIMARY
  VOCALS
  INSTRUMENTAL
  MIXER
  OTHER
}
